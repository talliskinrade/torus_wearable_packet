{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "Sensor Data Packet",
    "type": "object",
    "properties": {
        "timestamp": {"type": "string", "format": "date-time"},

        "measurements": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "property": {"type": "string"},
                    "value": {"type": "number"},
                    "unit": {"type": "string"},
                    
                    "IMU": {
                        "type": "array",
                        "items": {
                            "acc": {"type": "array"},
                            "gyro": {"type": "array"},
                            "timestamp": {"type": "number"}
                        },
                        "required": ["acc","gyro","timestamp"]
                    }
                },
                "oneOf": [  {"required": ["property", "value", "unit"]},
                            {"required": ["IMU"]}]
            }
        },

        "monitoring": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "property": {"type": "string"},
                    "value": {"type": ["number", "string", "boolean"]}
                },
                "required": ["property", "value"]
            }
        }
    },
    "required": ["timestamp"]
}