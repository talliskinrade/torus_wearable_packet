{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "Sensor Data Packet",
    "type": "object",
    "properties": {
        "timestamp": {"type": "string", "format": "date-time"},

        "measurements": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "property": {"type": "string"},
                    "value": {
                        "oneOf": [
                            {
                                "type": "number"
                            },
                            {
                                "type": "array",
                                "items": {"type": "number"},
                                "minItems": 1,
                                "maxItems": 3
                            },
                            ],
                    },
                    "unit": {"type": "string"},
                    "comment": {"type": "string"}
                },
                "required": ["property", "value", "unit"]
            }
        },

        "monitoring": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "property": {"type": "string"},
                    "value": {"type": ["number", "string", "boolean"]}
                },
                "required": ["property", "value"]
            }
        }
    },
    "required": ["timestamp"]
}